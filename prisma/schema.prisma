datasource db {
  provider = "postgresql" // ή mysql/sqlite ανάλογα τι έχεις
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String?  // για μελλοντική μετάβαση σε password (μένει null τώρα)
  createdAt    DateTime @default(now())

  // σχέσεις
  tokens       MagicLinkToken[]
}

model MagicLinkToken {
  id        String   @id @default(cuid())
  email     String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?

  createdAt DateTime @default(now())
}
